<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_movie"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_add_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/layout_movie"
            android:layout_marginLeft="10sp"
            android:text="영화"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/white"
            android:background="@color/text_black"
            android:gravity="center"
            android:padding="5sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_theater"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:onClick="onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/layout_theater"
            android:layout_marginLeft="10sp"
            android:text="영화관"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/white"
            android:background="@color/text_black"
            android:gravity="center"
            android:padding="5sp"/>

        <TextView
            android:id="@+id/tv_theater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="ㄹ"
            android:textSize="@dimen/textSize_20"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_day"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:onClick="onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/layout_day"
            android:layout_marginLeft="10sp"
            android:text="날짜"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/white"
            android:background="@color/text_black"
            android:gravity="center"
            android:padding="5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="11월\n 08(금)"
            android:textSize="@dimen/textSize_20"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>